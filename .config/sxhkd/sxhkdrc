	sh .config/rofi/powermenu.sh



#launcher
alt + @space
	rofi -show drun #-show combi -icon-theme "Papirus" -show-icons



# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd
